<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="conveyor_belt">
    <xacro:arg name="tf_prefix" default="" />
    <!-- Import control_xacro -->
    <xacro:include filename="conveyor_belt.ros2_control.xacro" />

    <xacro:conveyor_belt_ros2_control name="conveyor_belt"/>

    <link name="$(arg tf_prefix)base_link"/>
    <link name="$(arg tf_prefix)conveyor_belt"/>

    <joint name="$(arg tf_prefix)joint1" type="revolute">
        <parent link="$(arg tf_prefix)base_link"/>
        <child link="$(arg tf_prefix)conveyor_belt"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0" />
        <limit velocity="4.8" effort="1" lower="${-pi*100.0}" upper="${pi*100.0}" />
    </joint>

</robot>
